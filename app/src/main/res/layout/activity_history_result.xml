<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="com.example.zhuosheng.ee3080app.CameraResult">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/takenImage"
        android:layout_width="match_parent"
        android:layout_height="360sp"
        android:scaleType="centerCrop" />
    <!--android:src="@drawable/dog" />-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:text="PREDICTION"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Click on the word to hear it!"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/main_prediction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="main prediction"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="25sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="10sp"
            android:text="Haven't got the right one? Try the one below!"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="normal" />


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:stretchColumns="*">

            <TableRow>

                <TextView
                    android:id="@+id/second_prediction"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20sp"
                    android:layout_weight="1"
                    android:paddingTop="10sp"
                    android:text="second prediction"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="15dp"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/third_prediction"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="20sp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingTop="10sp"
                    android:text="third prediction"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/fourth_prediction"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20sp"
                    android:layout_weight="1"
                    android:paddingTop="5sp"
                    android:text="fourth prediction"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/fifth_prediction"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="20sp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingTop="5sp"
                    android:text="fifth prediction"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="15sp"
                    android:textStyle="normal" />

            </TableRow>
        </TableLayout>

        <Spinner
            android:id="@+id/LangSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14sp"
            android:layout_marginTop="20sp"
            android:text="Choose a language!" />

        <Button
            android:id="@+id/btnTranslate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20sp"
            android:text="Translate"
            android:textSize="15sp" />
    </LinearLayout>


</LinearLayout>
</ScrollView>
